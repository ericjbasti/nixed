{
  "manifest_version": 2,

  "name": "Nixed",
  "description": "We get rid of some annoying fixed positioning used on certain websites",
  "version": "1.0",

  "browser_action": {
   "default_icon": "icon.png",
   "default_popup": "menu.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["nixed.js"],
      "css": ["nixed.css"]
    }
  ]
}